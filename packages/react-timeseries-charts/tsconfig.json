{
    "compilerOptions": {
        "module": "esnext",
        "jsx": "react",
        "lib": ["es6", "dom"],
        "declaration": true,
        "outDir": "dist",
        "declarationDir": "dist",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": false,
        "types": [],
        "forceConsistentCasingInFileNames": false,
        "removeComments": true,
        "sourceMap": true,
        "target": "es5",
        "moduleResolution": "node"
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
