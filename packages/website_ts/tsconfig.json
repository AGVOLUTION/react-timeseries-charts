{
    "compilerOptions": {
        "outDir": "build/dist",
        "module": "esnext",
        "target": "es6",
        "lib": ["es7", "dom"],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "src",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "strict": true,
        "noEmitHelpers": true,
        "noUnusedParameters": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ]
    },
    "exclude": ["node_modules"],
    "include": ["./src"]
}