{
    "compilerOptions": {
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": ["dom", "esnext"],
        "moduleResolution": "node",
        "outDir": "lib",
        "skipLibCheck": true,
        "downlevelIteration": true,
        "baseUrl": "src"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "lib"
    ]
}